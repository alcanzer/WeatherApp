<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alcanzer.weatherapp.MainActivity">

    <Button
        android:text="Get Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/button" />

    <TextView
        android:text="No place selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:id="@+id/sunRise"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempText"
        android:layout_marginBottom="21dp"
        android:textSize="22sp"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toStartOf="@+id/button"
        android:layout_marginEnd="13dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha"
        android:layout_marginEnd="17dp"
        android:id="@+id/imageView"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:id="@+id/main"
        android:layout_above="@+id/sunRise"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:textColor="@color/cast_expanded_controller_background_color" />
</RelativeLayout>
